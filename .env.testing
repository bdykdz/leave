# Testing Environment Configuration
# Copy this to .env in your testing folder

# Application
APP_ENV=production
APP_NAME="Leave Management Testing"
NODE_ENV=production

# Database (testing version)
DATABASE_URL="postgresql://postgres:password@leave-db-testing:5432/leave_testing"

# Authentication (update NEXTAUTH_URL with your server IP)
NEXTAUTH_URL="http://YOUR_SERVER_IP:3001"
NEXTAUTH_SECRET="testing-secret-generate-new-one"

# Azure AD Configuration (create separate app for testing)
AZURE_AD_CLIENT_ID="your-testing-azure-ad-client-id"
AZURE_AD_CLIENT_SECRET="your-testing-azure-ad-client-secret"
AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# Setup Security
SETUP_PASSWORD="testing-admin-password"

# Cron Job Security
CRON_SECRET="testing-cron-secret"

# Email Configuration (Resend)
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"
COMPANY_NAME="Your Company Name - Testing"